#include <stdio.h>

int main() {
   int num, i, isPrime = 1;

   printf("Enter a positive integer: ");
   scanf("%d", &num);

   /* Check for divisibility by numbers from 2 to num-1 */
   for(i=2; i<num; i++) {
      if(num%i == 0) {
         isPrime = 0; /* Number is not prime */
         break;
      }
   }

   /* Display result */
   if(isPrime) {
      printf("%d is a prime number.", num);
   }
   else {
      printf("%d is not a prime number.", num);
   }

   return 0;
}
