#include <stdio.h>

int main() {
   int n, i;
   float num, min;

   printf("Enter the total number of elements: ");
   scanf("%d", &n);

   printf("Enter number 1: ");
   scanf("%f", &min);

   for(i=2; i<=n; i++) {
      printf("Enter number %d: ", i);
      scanf("%f", &num);

      /* If current element is smaller than minimum */
      if(num < min) {
         min = num; /* Update minimum */
      }
   }

   printf("Lowest number = %.2f", min);
   return 0;
}
